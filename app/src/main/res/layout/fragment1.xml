<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refresh1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/fragment1"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_24"
            android:id="@+id/ib_menu_f1"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:layout_gravity="left|center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textColor="@color/red"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:id="@+id/ib_edit_f1"
            android:clickable="true"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right|center_vertical"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center_vertical"
            android:elevation="8dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_f1"
                android:background="@drawable/ic_person"
                android:clickable="true"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">


        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="40dp"
            android:clickable="true"
            android:id="@+id/followers_cardview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/tv_followers_f1"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textSize="15sp"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="40dp"
            android:clickable="true"
            android:id="@+id/following_cardview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/following_f1"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="15sp"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="40dp"
            android:clickable="true"
            android:id="@+id/posts_cardview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:id="@+id/postsNo_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textSize="15sp"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_f1"
        android:layout_marginBottom="5dp"
        android:hint="name"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_marginStart="5dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:gravity="start"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_prof_f1"
        android:layout_marginBottom="5dp"
        android:hint="profession"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textAlignment="viewStart"
        android:layout_marginStart="5dp"
        android:textColor="@color/textcolorgrey"
        android:gravity="start"
        android:textSize="15sp"/>







    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:id="@+id/tv_bio_f1"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:drawablePadding="20dp"
         />







    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/tv_email_f1"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:drawablePadding="20dp"
        android:paddingStart="10dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_notifications_active_24"
            android:id="@+id/tv_newf1"
            android:clickable="true"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_message_24"
            android:clickable="true"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:id="@+id/btn_sendmessage_showuser"/>


    </LinearLayout>



    <TableRow android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="@color/red"
         />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="match_parent"
        android:id="@+id/rv_posts">



    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>